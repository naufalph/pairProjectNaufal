<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Horror Story Home</title>
</head>
<body>
  <%- include("./partials/nav.ejs")  %> 
  <div class="search">
    <form>
      <input type="text" name="search" id="search" placeholder="search title here ...">
      <input type="submit" value="search">
    </form>
  </div>
  <div class="main-content">
    <table>
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Description</th>
          <th>Author</th>
          <th>Published</th>
        </tr>
      </thead>
      <tbody>
        <% data.forEach(element => { %>
          <tr>
              <td>
                <a href="/post/<%= element.id %>" >
                  <img src="<%= element.imageURL %>" alt="profile of <%= element.User.username %>">
                </a>
                  Tag : <p class="tag"><%= element.Tag.name %></p>
              </td>
              <td><a href="/post/<%= element.id %>">
                    <%= element.title %>
                  </a> 
              </td>
              <td><%= element.description %> <a href="/post/<%= element.id %>">See more</a></td>
              <td><%= element.User.username %> </td>
              <td><%= dateDescription(element.createdAt) %> </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  
</body>
</html>
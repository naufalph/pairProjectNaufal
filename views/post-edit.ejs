<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/style.css">
  <title>Horror Story Edit</title>
</head>
<body>
  <%- include("./partials/nav.ejs")  %> 
  <div class="main-content">
    <h2>Edit Horror Story</h2>
    <% if (error) { %>
      <p class="error"><%=error.split(";").join(" ")%></p>
    <% } %>
    <form action="/post/<%= postData.id %>/edit" method="post" class="log-in">
      <div class="input-box">
        <label for="title">title</label>
        <input type="text" name="title" id="title" value="<%= postData.title %>" >
      </div>

      <div class="input-box">
        <label for="imageURL">imageURL</label>
        <input type="text" name="imageURL" id="imageURL" value="<%= postData.imageURL %>">
      </div>

      <div class="input-box">
        <label for="TagId">Tag</label>
        <select name="TagId" id="TagId">
          <% tagData.forEach(el => { %>
            <option value="<%= el.id %>" ><%= el.name %> </option>
          <% }) %>
        </select>
      </div>

      <div class="input-box">
        <label for="content">content</label>
        <textarea id="content" name="content" rows="10" cols="70"><%= postData.content %></textarea>
      </div>

      <div class="input-box">
        <input type="submit" value="Edit">
      </div>
    </form>
  </div>
  
</body>
</html>